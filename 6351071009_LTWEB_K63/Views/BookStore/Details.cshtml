
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<style>
    #datmua a{
        clear:both;
        background-color:red;
        color:white;
        width:120px;
        height:35px;
        display: block;
        float:right;
        text-align: center;
        padding-top:10px;
        text-decoration:none;
        font-weight:bold;
    }
    #datmua a:hover{
        background-color:gray;
        color:red;
    }
</style>
<div>
<h2>Thông tin chi tiết</h2>
<div style="display:flex; flex-direction:row">
    <div style="width:40%; float:left; border-left: dotted 1px; border-color:azure">
        <img src="@Model.Anhbia" alt="Alternate Text" style="width:100%; height:400px"/>
    </div>
    <div style="width:60%; float:left;padding:10px">
        <h1 style="font-weight:bold">@Model.Tensach</h1>
        <p><span style="font-weight:bold">Mô tả:</span> @Model.Mota</p>
        <p>Giá bán: <span style="color:red">@Model.Giaban</span></p>
    </div>
</div>
<div id="datmua">
    <a href="@Url.Action("ThemGioHang", "GioHang", new { @iMasach = Model.Masach, @strUrl = Request.Url.ToString()})">
        Đặt Mua
    </a>
</div>
</div>
